#include <iostream>
using namespace std;
int main() {
   unsigned short a = 0x32b, b = 0x7a0, d = 0xd123;
   unsigned int c;
   c = a << 16 | b;

   cout << hex << a << " " << b << endl;
   cout << c << endl << endl;
   /*  a = 0000 0000 0000 0000 0000 0011 0010 1011
      b = 0000 0000 0000 0000 0000 0111 1010 0000

      a << 16 : 0000 0011 0010 1011 0000 0000 0000 0000
          | b : 0000 0000 0000 0000 0000 0111 1010 0000
              = 0000 0011 0010 1011 0000 0111 1010 0000
                   0    3    2    b    0    7    a    0*/

   c = a << 16 | d;

   cout << hex << a << " " << d << endl;
   cout << c << dec << " " << d << endl;

   /*  a = 0000 0000 0000 0000 0000 0011 0010 1011
      d = 0000 0000 0000 0000 1101 0001 0010 0011

      a << 16 : 0000 0011 0010 1011 0000 0000 0000 0000
          | d : 0000 0000 0000 0000 1101 0001 0010 0011
              = 0000 0011 0010 1011 1101 0001 0010 0011
                   0    3    2    b    d    1    2    3*/
   return 0;

}

// d = 1101 0001 0010 0011 = 1 2 32 256 2^12 2^14 2^15 = 53539
